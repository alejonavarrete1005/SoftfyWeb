@model SoftfyWeb.Modelos.Dtos.ForgotPasswordDto

@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #1c1c1c;">
    <div class="card p-4" style="max-width: 400px; width: 100%; background-color: #2c2c2c;">
        <h2 class="text-center text-white mb-4">Recuperar Contraseña</h2>

        <form method="post">
            <div class="mb-3">
                <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-2">Enviar enlace de recuperación</button>
        </form>

        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info text-center">
                @TempData["Info"]
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Error
            </div>
        }
    </div>
</div>
