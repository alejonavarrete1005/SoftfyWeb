@{
    ViewData["Title"] = "Registro de Artista";
}

<h2>Registro de Artista</h2>

<form asp-action="Registro" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Email">Correo Electrónico</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>

    <div class="form-group">
        <label for="Password">Contraseña</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" required />
    </div>

    <div class="form-group">
        <label for="Apellido">Apellido</label>
        <input type="text" class="form-control" id="Apellido" name="Apellido" required />
    </div>

    <div class="form-group">
        <label for="NombreArtistico">Nombre Artístico</label>
        <input type="text" class="form-control" id="NombreArtistico" name="NombreArtistico" required />
    </div>

    <button type="submit" class="btn btn-primary">Registrarse</button>
</form>
