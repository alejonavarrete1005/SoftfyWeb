@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid d-flex">
    <!-- Sidebar -->
    <nav class="bg-light border-end p-3" style="width: 250px; min-height: 100vh;">
        <h2 class="fw-bold">Softfy</h2>
        <input type="text" class="form-control mb-3" placeholder="Search" />

        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="VistaHome" asp-action="Index"><i class="fas fa-home"></i> Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="collapse" href="#libraryMenu"><i class="fas fa-folder"></i> Library</a>
                <div class="collapse" id="libraryMenu">
                    <ul class="nav flex-column ms-3">
                        <li><a class="nav-link" href="#"><i class="fas fa-microphone"></i> Artists</a></li>
                        <li><a class="nav-link" href="#"><i class="fas fa-compact-disc"></i> Albums</a></li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="collapse" href="#playlistMenu"><i class="fas fa-list"></i> Playlist <i class="fas fa-plus-circle small-icon"></i></a>
                <div class="collapse" id="playlistMenu">
                    <ul class="nav flex-column ms-3">
                        <li><a class="nav-link" href="#"><i class="fas fa-list-ul"></i> All playlists</a></li>
                        <li><a class="nav-link" href="#"><i class="fas fa-music"></i> My playlist</a></li>
                    </ul>
                </div>
            </li>
        </ul>

        <div class="mt-auto pt-3">
            <a class="nav-link" href="#"><i class="fas fa-cog"></i> Configuration</a>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="p-4 flex-fill">
        <header class="d-flex justify-content-between align-items-center mb-4">
            <div class="btn-group" role="group" aria-label="Playback controls">
                <button class="btn btn-outline-secondary"><i class="fas fa-random"></i></button>
                <button class="btn btn-outline-secondary"><i class="fas fa-backward"></i></button>
                <button class="btn btn-primary"><i class="fas fa-play"></i></button>
                <button class="btn btn-outline-secondary"><i class="fas fa-forward"></i></button>
            </div>
            <a class="btn btn-outline-dark" href="#"><i class="fas fa-user-circle"></i> Profile</a>
        </header>

        <section>
            <h1>Home</h1>
            <p>Suggestions for you</p>
        </section>
    </main>
</div>
